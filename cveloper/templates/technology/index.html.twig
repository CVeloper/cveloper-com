{% extends 'base.html.twig' %}

{% block title %}Listado Tecnologías{% endblock %}

{% block stylesheets %}
    {% include 'home/styles.html' %}
{% endblock %}

{% block header %}
    {% include 'home/header.html.twig' %}
{% endblock %}
{% block body %}
    <h1>Listado Tecnologías</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Logo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for technology in technologies %}
            <tr>
                <td>{{ technology.id }}</td>
                <td>{{ technology.name }}</td>
                <td>{{ technology.logo }}</td>
                <td>
                    <a href="{{ path('technology_show', {'id': technology.id}) }}">Mostrar</a>
                    <a href="{{ path('technology_edit', {'id': technology.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron Datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('technology_new') }}">Añadir Nuevos Datos</a>
{% endblock %}
