		<div class="col-12">
        {{ form_row(registrationForm.username, {
            'label': 'Username'
        }) }}
    </div>
    <div class="col-12">
        {{ form_row(registrationForm.plainPassword, {
            'label': 'Password'
        }) }}
    </div>
    <div class="col-9">
        {{ form_row(registrationForm.termsAccepted, {
            'label': 'Acepto los TÃ©rminos y Condiciones',
            'label_attr': {'class': 'checkbox_span'}
        }) }}
    </div>
    <input type="hidden" name="formulario" value="REGISTER">
    <div class="col-3 izquierda">
        <button class="btn">Aceptar</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
