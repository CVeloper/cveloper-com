{% extends 'base.html.twig' %}

{% block title %}Additional index{% endblock %}

{% block body %}
    <h1>Additional index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for additional in additionals %}
            <tr>
                <td>{{ additional.id }}</td>
                <td>{{ additional.description }}</td>
                <td>
                    <a href="{{ path('additional_show', {'id': additional.id}) }}">show</a>
                    <a href="{{ path('additional_edit', {'id': additional.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('additional_new') }}">Create new</a>
{% endblock %}
