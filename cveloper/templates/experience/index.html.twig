{% extends 'base.html.twig' %}

{% block title %}Listado Experiencias{% endblock %}

{% block stylesheets %}
    {% include 'home/styles.html' %}
{% endblock %}

{% block header %}
    {% include 'home/header.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Listado de Experiencias</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Puesto</th>
                <th>Compañía</th>
                <th>Ciudad</th>
                <th>Desde</th>
                <th>Hasta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.position }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.city }}</td>
                <td>{{ experience.dateFrom ? experience.dateFrom|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.dateTo ? experience.dateTo|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">Mostrar</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No se han encontrado Datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}">Añadir Experiencia</a>
{% endblock %}
