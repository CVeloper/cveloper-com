{% extends 'base.html.twig' %}

{% block title %}Experiencia{% endblock %}

{% block stylesheets %}
    {% include 'home/styles.html' %}
{% endblock %}

{% block header %}
    {% include 'home/header.html.twig' %}
{% endblock %}
{% block body %}
    <h1>Experiencia</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Puesto</th>
                <td>{{ experience.position }}</td>
            </tr>
            <tr>
                <th>Compañía</th>
                <td>{{ experience.company }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ experience.city }}</td>
            </tr>
            <tr>
                <th>Desde</th>
                <td>{{ experience.dateFrom ? experience.dateFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hasta</th>
                <td>{{ experience.dateTo ? experience.dateTo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('experience_index') }}">Volver al Listado</a>

    <a href="{{ path('experience_edit', {'id': experience.id}) }}">Editar</a>

        {{ include('experience/_delete_form.html.twig', {'button_label': 'Borrar'}) }}
{% endblock %}
